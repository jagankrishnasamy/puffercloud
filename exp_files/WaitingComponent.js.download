(function () {
  'use strict';
  var common = window.jacksmod.common;

  var template = `
<div class="waiting-screen">
  <div></div>
  <div>Generating Preview...</div>
  <div><img src="https://www.emulab.net/protogeni/jacksmod/stable/images/spinner.gif"></div>
</div>
`;

  var WaitingComponent = common.ComponentQuery.extend({

    render: function () {
      if (! this.rendered)
      {
	this.$el = $(template);
      }
      return this.superRender();
    }
    
  });

  common.component.WaitingComponent = WaitingComponent;
})();
